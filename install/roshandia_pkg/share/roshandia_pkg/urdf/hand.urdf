        </collision>
    </link>

    <joint name="f2_to_hand" type="revolute">
        <parent link="hand"/>
        <child link="finger2"/>
        <origin xyz="0.285932 0.615642 4.82351"/>
        <axis xyz="0 1 0"/>
        <limit effort="100" velocity="0.5" lower="-1.222" upper="0"/>
    </joint>
    <!-- //////////////////  finger 3   //////////////////-->
