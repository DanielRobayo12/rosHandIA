             </geometry>
        </visual>
        <collision>
            <geometry> 
                <mesh filename = "package://roshandia_pkg/urdf/mesh/finger4.stl"/>
             </geometry>
        </collision>
    </link>

    <joint name="f4_to_hand" type="revolute">
        <parent link="hand"/>
        <child link="finger4"/>
