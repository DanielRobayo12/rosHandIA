        <collision>
            <geometry> 
                <mesh filename = "package://roshandia_pkg/urdf/mesh/finger5.stl"/>
             </geometry>
        </collision>
    </link>

    <joint name="f5_to_hand" type="revolute">
        <parent link="hand"/>
        <child link="finger5"/>
        <origin xyz="0.046572 -0.898537 4.52963"/>
        <axis xyz="0 1 0"/>
        <limit effort="100" velocity="0.5" lower="-1.222" upper="0"/>
    </joint>

</robot>
