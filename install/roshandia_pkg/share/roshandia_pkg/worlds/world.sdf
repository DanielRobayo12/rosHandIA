<?xml version="1.0" ?>
<sdf version="1.8">
  <world name="drone_world">
    <!-- Physics -->
    <physics name="1ms" type="ignored">
      <max_step_size>0.01</max_step_size>
      <real_time_factor>1.0</real_time_factor>
    </physics>

    <!-- Plugins -->
    <plugin filename="gz-sim-physics-system" name="gz::sim::systems::Physics"></plugin>
    <plugin filename="gz-sim-user-commands-system" name="gz::sim::systems::UserCommands"></plugin>
    <plugin filename="gz-sim-scene-broadcaster-system" name="gz::sim::systems::SceneBroadcaster"></plugin>
    <plugin filename="gz-sim-contact-system" name="gz::sim::systems::Contact"></plugin>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
    <plugin filename="gz-sim-imu-system" name="gz::sim::systems::Imu"></plugin>

    <!-- Enhanced Wind/Air Flow Plugin -->
    <plugin filename="gz-sim-wind-effects-system" name="gz::sim::systems::WindEffects">
      <horizontal>
        <magnitude>
          <time_for_rise>10</time_for_rise>
          <sin>
            <amplitude_percent>0.15</amplitude_percent>
            <period>40</period>
          </sin>
          <noise type="gaussian">
            <mean>0</mean>
            <stddev>0.001</stddev>
          </noise>
        </magnitude>
        <direction>
          <time_for_rise>20</time_for_rise>
          <sin>
            <amplitude>15</amplitude>
            <period>15</period>
          </sin>
          <noise type="gaussian">
            <mean>0</mean>
            <stddev>20</stddev>
          </noise>
        </direction>
      </horizontal>
      <vertical>
        <noise type="gaussian">
          <mean>0</mean>
          <stddev>0.0005</stddev>
        </noise>
      </vertical>
    </plugin>

    <!-- Dark Theme Scene Configuration -->
    <scene>
      <ambient>0.3 0.3 0.3 1</ambient>
      <background>0.02 0.02 0.02 1</background>
      <shadows>true</shadows>
      <grid>false</grid>
    </scene>

    <!-- GUI Configuration -->
    <gui fullscreen="0">

      <!-- Window configuration with Black theme -->
      <window>
        <width>1920</width>
        <height>1080</height>
        <style material_theme="Dark" material_primary="BlueGrey" material_accent="Teal"/>
      </window>

      <!-- 3D View with updated camera pose -->
      <plugin filename="GzScene3D" name="3D View">
        <gz-gui>
          <title>3D View</title>
          <property type="bool" key="showTitleBar">false</property>
          <property type="string" key="state">docked</property>
        </gz-gui>
        <engine>ogre2</engine>
        <scene>scene</scene>
        <ambient_light>0.3 0.3 0.3</ambient_light>
        <background_color>0.02 0.02 0.02</background_color>
        <camera_pose>1.163896 0.100641 1.480959 0 0.245797 0.023627</camera_pose>
        <camera_clip>
          <near>0.1</near>
          <far>1000</far>
        </camera_clip>
        <show_transform_controls>false</show_transform_controls>
      </plugin>

      <!-- Component Inspector - Collapsed -->
      <plugin filename="ComponentInspector" name="Component Inspector">
        <gz-gui>
          <title>Component Inspector</title>
          <property type="bool" key="showTitleBar">true</property>
          <property type="string" key="state">docked_collapsed</property>
        </gz-gui>
      </plugin>

      <!-- Entity Tree - Collapsed -->
      <plugin filename="EntityTree" name="Entity Tree">
        <gz-gui>
          <title>Entity Tree</title>
          <property type="bool" key="showTitleBar">true</property>
          <property type="string" key="state">docked_collapsed</property>
        </gz-gui>
      </plugin>

      <!-- Mouse drag - Collapsed -->
      <plugin filename="Select" name="Mouse drag">
        <gz-gui>
          <title>Mouse drag</title>
          <property type="bool" key="showTitleBar">true</property>
          <property type="string" key="state">docked_collapsed</property>
        </gz-gui>
      </plugin>
      <!-- Star buttom -->
      <plugin
        filename="gz-gui-play-button"
        name="gz::gui::PlayButton">
      </plugin>
    </gui>

    <spherical_coordinates>
      <surface_model>EARTH_WGS84</surface_model>
      <world_frame_orientation>ENU</world_frame_orientation>
      <latitude_deg>0</latitude_deg>
      <longitude_deg>0</longitude_deg>
      <elevation>0</elevation>
      <heading_deg>0</heading_deg>
    </spherical_coordinates>

    <!-- Key Light -->
    <light type="point" name="key_light">
      <pose>3 10 15 0 0 0</pose>
      <diffuse>0.9 0.9 0.95 1</diffuse>
      <specular>0.6 0.6 0.6 1</specular>
      <attenuation>
        <range>50</range>
        <constant>0.5</constant>
        <linear>0.01</linear>
        <quadratic>0.001</quadratic>
      </attenuation>
      <cast_shadows>true</cast_shadows>
    </light>

    <!-- Black Reflective Ground Plane -->
    <model name="ground_plane">
      <static>true</static>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>0.8</mu>
                <mu2>0.8</mu2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>100 100</size>
            </plane>
          </geometry>
          <material>
            <ambient>0.02 0.02 0.02 1</ambient>
            <diffuse>0.05 0.05 0.05 1</diffuse>
            <specular>0.3 0.3 0.3 1</specular>
            <emissive>0 0 0 1</emissive>
            <pbr>
              <metal>
                <metalness>0.4</metalness>
                <roughness>0.6</roughness>
              </metal>
            </pbr>
          </material>
        </visual>
      </link>
    </model>

    <!-- Stronger constant breeze -->
    <wind>
      <linear_velocity>0.8 0.5 0.1</linear_velocity>
    </wind>
  </world>
</sdf>